cp /opt/security/admin.properties /etc/kafka/
cd /etc/kafka

security.protocol=SASL_PLAINTEXT
sasl.mechanism=PLAIN
"sasl.jaas.config=org.apache.kafka.common.security.plain.PlainLoginModule required username=\"broker\" password=\"broker\";"


kafka-topics --bootstrap-server broker:9092 --create --topic input --command-config admin.properties --partitions 4 --replication-factor 1
kafka-topics --bootstrap-server broker:9092 --create --topic output --command-config admin.properties --partitions 4 --replication-factor 1
kafka-acls --bootstrap-server broker:9092 --command-config admin.properties --topic input --allow-principal User:client --consumer --add --group "*"
kafka-acls --bootstrap-server broker:9092 --command-config admin.properties --allow-principal User:client --cluster --add
kafka-console-producer --producer.config admin.properties --bootstrap-server broker:9092 --topic input --property parse.key=true --property key.separator=: